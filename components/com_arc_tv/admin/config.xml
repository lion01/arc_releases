<config>
	<params group="general_params">
		<param name="votw"            type="text" size="10"   label="Video of the week"      description="The featured video for the week to show on the home page" />
		<param name="rec_size"        type="text" size="10"   label="Recommended size"       description="How many videos to show in the recommended section" />
		<param name="sidebar_size"    type="text" size="10"   label="Sidebar size"           description="How many videos to show in the sidebar" />
