		<param name="tagcloud_size"   type="text" size="10"   label="Tag cloud size"         description="How many tags to show in the tag cloud" />
		<param name="tagcloud_scale"  type="text" size="10"   label="Tag cloud scale factor" description="Scale factor for largest tag in the cloud" />
		<param name="viewed_days"     type="list" default="3" label="Viewed period"          description="Time before current date to consider for determing how popular a video is based on number of views">
			<option value="1">1 Day</option>
			<option value="3">3 Days</option>
			<option value="7">1 Week</option>
			<option value="14">2 Weeks</option>
			<option value="30">1 Month</option>
			<option value="90">3 Months</option>
			<option value="365">1 Year</option>
		</param>
	</params>
